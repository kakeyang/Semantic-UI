html {
  font-size: 62.5%;
}

body {
  margin: 0 auto;
  -webkit-font-smoothing: antialiased;
  overflow-x: hidden; 
}

@media print, screen and (max-width: 767px) {
    body {
      -webkit-text-size-adjust: 100%;
      -webkit-overflow-scrolling: touch;
    }
}

.sw-ttl {
  padding: 20px;
  margin: 0 auto 30px;
  width: 100%;
  background-color: #86b1dc;
  border-radius: 5px; 
	.ui.header {
		display: block;
	  -webkit-margin-before: 0.83em;
	  -webkit-margin-after: 0.83em;
	  -webkit-margin-start: 0px;
	  -webkit-margin-end: 0px;
		color: #fff;
		font-size: 1.6rem;
		font-weight: 500;
		letter-spacing: 0.025em;
	}
}
.adm-contents {
  padding: 40px 0 90px 0;
}

.adm-contents-inner {
	padding: 40px 0 60px 0;
	margin: 0 auto;
	width: 100%;
	background-color: #fff;
	text-align: center;
}

.adm-contents_form {
	margin: 0 auto;
	width: 485px;
	color: #616e7a;
	font-size: 14px;
	font-size: 14px;
	font-size: 1.4rem;
	font-weight: 500;
	letter-spacing: 0.025em;
}
.st-container {
  box-sizing: border-box;
  overflow: hidden;
}
.isAdmin {
  background-color: #f1f5f9;
}

.admin-title {
	color: #fff;
}

.irokoto {
  color: @irokoto;
}

.left {
  float: left;
}

.btn-link {
  cursor: pointer;
  letter-spacing: 0.05em;
  background: none !important;
  border: none !important;
  color: #1e70bf !important;
}

.logo {
	width: 223px;
	height: 46px;
}

.login-form {
  width: 400px !important;
}

.login-content-inner {
  top: 50%;
  left: 50%;
  position: absolute;
  transform: translate(-50%, -50%);
  text-align: center;
}

.login-title {
  margin-top: 20px !important;
  font-size: 13px;
  color: #616e7a;
  letter-spacing: 0.05em;
  font-weight: 400;
}

.error-validation {
  color: red;
  font-size: 16px;
  margin-top: 35px;
  font-weight: 500;
  letter-spacing: 0.05em;
}

.form-submit-login {
  margin-top: 30px;
}

.btn-submit-login {
  margin-top: 30px !important;
}

.btn-submit-forgot-password {
  margin-top: 30px !important;
}

.st-header_logo_anchor {
  display: inline-block;
  vertical-align: middle;
  font-size: 15px;
  font-size: 15px;
  font-size: 1.5rem;
}

.st-header {
  padding: 28px 35px;
  width: 100%;
  background-color: #fff;
  .st-header_logo {
    margin: 0px 0 0 0;
    font-size: 0;
    float: left;
    .st-header_logo_company {
      margin: 0 0 0 25px;
      display: inline-block;
      vertical-align: middle;
      color: #616e7a;
      font-size: 15px;
      font-size: 15px;
      font-size: 1.5rem;
      font-weight: 500;
      letter-spacing: 0.025em;
    }
  }
}

.notice-form {
  padding-left: 40px;
  padding-right: 40px;
}

.button-notice-form {
  margin-right: 35px !important;
}

.datepicker-notice-form {
  float: left !important;
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 5px;
  margin-bottom: 5px;
}

.deliver_date {
  width: 100% !important;
}

.content-notice-form {
  margin-top: 20px !important; 
}

.adm-contents-inner-top {
    padding: 0;
    background-color: #f1f5f9;
}
