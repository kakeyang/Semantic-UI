body {
  background-color: #fff1f1;
}

.logo {
	width: 223px;
	height: 46px;
}


.login-content-inner {
	width: 50%;
  top: 50%;
  left: 50%;
  position: absolute;
  transform: translate(-50%, -50%);
  text-align: center;
}

.login-title {
  margin-top: 20px;
  font-size: 13px;
  color: #616e7a;
  letter-spacing: 0.05em;
}

.error-validation {
  color: red;
  font-size: 16px;
  margin-top: 35px;
  font-weight: 500;
  letter-spacing: 0.05em;
}