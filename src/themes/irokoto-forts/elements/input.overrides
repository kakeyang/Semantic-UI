  line-height: 0.5rem;
}

.ui.form {
    .inline.field .ui.input input[type="text"]:placeholder-shown,
    .inline.field .ui.input input[type="password"]:placeholder-shown,
    .ui.form .inline.field .ui.input .react-datepicker-wrapper .react-datepicker__input-container {
        color: rgb(203, 209, 215);
    }
    .inline.field .ui.input input[type="text"],
    .inline.field .ui.input input[type="password"],
    .inline.field .react-datepicker-wrapper .react-datepicker__input-container input[type="text"] {
        width: 320px;
        color: rgb(109, 121, 132);
        font-size: 1.4rem;
        font-family: "Noto Sans Japanese";
        font-weight: 500;
        letter-spacing: 0.025em;
        padding: 12px 12px 13px;
        border-width: 1px;
        border-style: solid;
        border-color: rgb(221, 227, 233);
        border-image: initial;
        border-radius: 4px;
        outline: none;
    }
}

.log-contents_form_forget {
  font-size: 14px !important;
  font-size: 14px !important;
  font-size: 1.4rem !important;
  position: relative;
  color: #333333 !important;
  font-weight: normal !important;
  margin-left: 22px !important;
  letter-spacing: .05em;
  background: 0 0!important;
  border: none!important;
}

.log-contents_form_forget:hover {
  text-decoration: underline;
  color: #333333;
}

.log-contents_form_forget:after {
  content: "";
  display: block;
  width: 13px;
  height: 13px;
  background-repeat: no-repeat;
  background-image: url(../images/icn_forget-arrow.png);
  background-size: 13px 13px;
  position: absolute;
  top: 7.5px;
  left: -10px;
}

