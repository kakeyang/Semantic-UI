.ui.modal {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  margin-top: 0 !important;
}

.ui.modal>.content {
  text-align: center;
  padding: 150px 0 50px 0;
}

@media only screen and (max-width: 991px) {
  .ui.modal>.close {
    color: #fff;
    top: -2.5rem;
    right: -2.5rem;
  }
}

.adm-modal_text {
  margin: 0 0 90px 0;
  color: #ea0303;
  font-size: 22px;
  font-size: 22px;
  font-size: 2.2rem;
  font-weight: 700;
}